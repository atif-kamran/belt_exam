<h3><a href="/users/<%= @idea.user.id %>"><%= @idea.user.alias %></a> says:</h3>
<h3><%= @idea['content'] %></h3>

<br>

<h5>Those who appreciated this idea:</h5>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Alias</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @users_liked.each do |user| %>
      <tr>
        <td><a href="/users/<%= user.id %>"><%= user.alias %></a></td>
        <td><%= user.name %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<form action="/bright_ideas" method="get">
  <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
  <input type="submit" class="btn btn-default" name="" value="Bright Ideas">
</form>


<form action="/users/logout" method="post">
  <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
  <input type="submit" class="btn btn-default" name="" value="Logout">
</form>
